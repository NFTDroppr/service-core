            <dependency>
                <groupId>com.rarible.core</groupId>
                <artifactId>rarible-core-lock</artifactId>
                <version>1.2-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>com.rarible.core</groupId>
                <artifactId>rarible-core-test-common</artifactId>
                <version>1.2-SNAPSHOT</version>
                <scope>test</scope>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <modules>
        <module>feign</module>
        <module>logging</module>
        <module>test-common</module>
        <module>coroutine</module>
        <module>logging-filter</module>
        <module>mongo</module>
